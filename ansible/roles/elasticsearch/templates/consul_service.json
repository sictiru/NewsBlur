{
    "service": {
        "name": "db-elasticsearch",
        "tags": [
            "db"
        ],
        "port": 9200,
        "checks": [{
            "id": "es-ping",
            "http": "http://{{ ansible_host }}:5579/db_check/elasticsearch",
            "interval": "15s",
            "failures_before_critical": 4
        }]
    }
}  
